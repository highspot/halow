<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Halow Service</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="container">
            <h1><i class="fas fa-database"></i> Halow Dashboard</h1>
            <div class="env-badge env-<%= environment %>">
                <%= environment.toUpperCase() %>
            </div>
        </div>
    </header>

    <div class="app-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-cogs"></i> Navigation</h3>
            </div>
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a href="/deployment" class="nav-link <%= (typeof currentTab !== 'undefined' && currentTab === 'deployment') ? 'active' : '' %>">
                        <i class="fas fa-rocket"></i>
                        <span>Deployment</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/secrets" class="nav-link <%= (typeof currentTab !== 'undefined' && currentTab === 'secrets') ? 'active' : '' %>">
                        <i class="fas fa-key"></i>
                        <span>Secrets</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-container">
                <%- body %>
            </div>
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Halow Service | DynamoDB Table: <%= tableName || 'N/A' %></p>
        </div>
    </footer>

    <script src="/js/app.js"></script>
</body>
</html>